<p id="notice"><%= notice %></p>

<h1>Listing Matters</h1>

<table>
  <thead>
    <tr>
      <th>Fixed fee</th>
      <th>Cost</th>
      <th>Expect hours</th>
      <th>Lawfirm</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matters.each do |matter| %>
      <tr>
        <td><%= matter.fixed_fee %></td>
        <td><%= matter.cost %></td>
        <td><%= matter.expect_hours %></td>
        <td><%= matter.lawfirm %></td>
        <td><%= link_to 'Show', matter %></td>
        <td><%= link_to 'Edit', edit_matter_path(matter) %></td>
        <td><%= link_to 'Destroy', matter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

